{
	"include": ["./src/**/*.ts"],
	"compilerOptions": {
		"lib": ["es2022", "dom"],
		"module": "esnext",
		"target": "es2022",
		"moduleResolution": "Node",

		"rootDir": "./src",
		"outDir": "build",

		"strict": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"resolveJsonModule": true,

		"types": ["vitest/globals"],
		"allowUmdGlobalAccess": true
	}
}
